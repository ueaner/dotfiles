# $XDG_CONFIG_HOME/.curlrc (Added in 7.73.0)

# curl http://httpbin.org/headers
# curl http://httpbin.org/ip

# --noproxy
noproxy = "localhost,127.0.0.1,0.0.0.0"

# curl -x socks5h://127.0.0.1:1080 $uri
# curl --socks5 socks5h://127.0.0.1:1080 $uri
socks5 = "socks5h://127.0.0.1:1080"

# --location
location

# When following a redirect, automatically set the previous URL as referer.
referer = ";auto"

# Latest Edge on macOS User Agents
user-agent = "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/111.0.0.0 Safari/537.36 Edg/111.0.1661.51"
# Latest Edge on macOS User Agents
#user-agent = "Mozilla/5.0 (Macintosh; Intel Mac OS X 13_2_1) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/111.0.0.0 Safari/537.36 Edg/111.0.1661.51"

# Wait 10 seconds before timing out.
connect-timeout = 10
