# vim: set ft=dosini:

[options]
# Suppress built-in key bindings, and specify them explicitly in this config file.
suppress_default_binds = true

[aliases]
# Define aliases here. Any arguments passed to an alias are appended to the command.
# alias = command to run

[binds]
# Define some key bindings
q = quit

# Image navigation
<Left> = prev
<Up> = prev
<bracketleft> = prev
<Right> = next
<Down> = next
<bracketright> = next
gg = goto 1
<Shift+G> = goto -1

# Panning
j = pan 0 -50
k = pan 0 50
l = pan 50 0
h = pan -50 0

# Zooming
<Shift+plus> = zoom 1
<equal> = zoom 1
<Shift+underscore> = zoom -1
<minus> = zoom -1
0 = zoom actual

# Rotate Clockwise by 90 degrees
<Ctrl+r> = rotate by 90

# Other commands
f = fullscreen
c = center
r = reset
x = close
d = overlay
<backslash> = scaling next
<Shift+backslash> = upscaling next

# Output to Terminal
y = exec echo working!
p = exec echo $imv_current_file

# Gif playback
<period> = next_frame
<space> = toggle_playing

# Slideshow control
t = slideshow +1
<Shift+T> = slideshow -1
