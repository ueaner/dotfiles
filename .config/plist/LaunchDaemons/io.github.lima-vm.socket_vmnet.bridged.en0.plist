<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<!-- https://github.com/lima-vm/socket_vmnet/blob/master/launchd/io.github.lima-vm.socket_vmnet.bridged.en0.plist -->
<!-- Install: -->
<!-- 1. Copy this to /Library/LaunchDaemons/io.github.lima-vm.socket_vmnet.bridged.en0.plist -->
<!-- 2. sudo launchctl bootstrap system /Library/LaunchDaemons/io.github.lima-vm.socket_vmnet.bridged.en0.plist -->
<!-- 3. sudo launchctl enable system/io.github.lima-vm.socket_vmnet.bridged.en0 -->
<!-- 4. sudo launchctl kickstart -kp system/io.github.lima-vm.socket_vmnet.bridged.en0 -->
<!-- Uninstall: -->
<!-- 1. sudo launchctl bootout system /Library/LaunchDaemons/io.github.lima-vm.socket_vmnet.bridged.en0.plist -->
<!-- 2. sudo rm /Library/LaunchDaemons/io.github.lima-vm.socket_vmnet.bridged.en0.plist -->
<plist version="1.0">
	<dict>
		<key>Label</key>
		<string>io.github.lima-vm.socket_vmnet.bridged.en0</string>
		<key>Program</key>
		<string>/opt/local/bin/socket_vmnet</string>
		<key>ProgramArguments</key>
		<array>
			<string>/opt/local/bin/socket_vmnet</string>
			<string>--vmnet-mode=bridged</string>
			<string>--vmnet-interface=en0</string>
			<string>/tmp/socket_vmnet.bridged.en0.sock</string>
		</array>
		<key>StandardErrorPath</key>
		<string>/tmp/socket_vmnet.bridged.en0.stderr.log</string>
		<key>StandardOutPath</key>
		<string>/tmp/socket_vmnet.bridged.en0.stdout.log</string>
		<key>RunAtLoad</key>
		<true />
		<key>KeepAlive</key>
		<true />
		<key>UserName</key>
		<string>root</string>
		<!-- Avoid resource limits harming performance -->
		<key>ProcessType</key>
		<string>Interactive</string>
	</dict>
</plist>
