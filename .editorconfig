root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.{go,java,py,php,lua}]
indent_size = 4
indent_style = tab

[*.{js,ts,jsx,tsx}]
indent_size = 2
indent_style = tab

[*.{yml,yaml}]
indent_size = 2
indent_style = tab
