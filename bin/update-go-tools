#!/usr/bin/env bash

GO_VERSION=`go version | { read _ _ v _; echo ${v#go}; }`

verlte() {
    printf '%s\n%s' "$1" "$2" | sort -C -V
}

# if verlt "v2.5.5" "v2.5.6"; then
#     echo "yes"
# else
#     echo "no"
# fi
verlt() {
    ! verlte "$2" "$1"
}

# vim 使用
# 参考： https://github.com/golang/vscode-go/blob/master/docs/tools.md
packages=(
github.com/acroca/go-symbols@latest # vscode
github.com/cweill/gotests/gotests@latest # vscode
github.com/davidrjenni/reftools/cmd/fillstruct@latest # both
github.com/fatih/gomodifytags@latest # both option
github.com/fatih/motion@latest # vim-go
github.com/go-delve/delve/cmd/dlv@latest # both
github.com/golangci/golangci-lint/cmd/golangci-lint@latest # both option
github.com/haya14busa/goplay/cmd/goplay@latest # vscode
github.com/josharian/impl@master # both option: Generate Interface Stubs
github.com/jstemmer/gotags@master # vim-go
github.com/kisielk/errcheck@latest # vim-go
github.com/klauspost/asmfmt/cmd/asmfmt@latest # vim-go
github.com/koron/iferr@master # vim-go
github.com/mgechev/revive@latest # both option
github.com/ramya-rao-a/go-outline@latest # vscode
github.com/rogpeppe/godef@latest # both
github.com/sqs/goreturns@latest # vscode
github.com/uudashr/gopkgs/v2/cmd/gopkgs@latest # vscode
github.com/zmb3/gogetdoc@latest # vscode
golang.org/x/lint/golint@master # both option
golang.org/x/tools/cmd/goimports@master # both option: format tool
golang.org/x/tools/cmd/gorename@latest # both
golang.org/x/tools/cmd/guru@master # vim-go: guru does not support Go modules
golang.org/x/tools/gopls@latest # both
honnef.co/go/tools/cmd/keyify@master # vim-go
honnef.co/go/tools/cmd/staticcheck@latest # both option: lint tool
github.com/go-delve/delve/cmd/dlv@master # others >>>>>>>>>>>>-
github.com/arl/gitmux@latest # git status on tmux line
github.com/google/gops@latest
github.com/ofabry/go-callvis@master   # call graph
golang.org/x/tools/cmd/callgraph@master
golang.org/x/tools/cmd/digraph@master
github.com/boyter/scc@latest
golang.org/x/mobile/cmd/gomobile@latest
golang.org/x/mobile/cmd/gobind@latest
github.com/google/wire/cmd/wire@latest
github.com/kyleconroy/sqlc/cmd/sqlc@latest
github.com/envoyproxy/protoc-gen-validate@latest
google.golang.org/protobuf/cmd/protoc-gen-go@latest
google.golang.org/grpc/cmd/protoc-gen-go-grpc@latest
github.com/go-kratos/kratos/cmd/kratos/v2@latest
github.com/go-kratos/kratos/cmd/protoc-gen-go-http/v2@latest
github.com/google/gnostic/cmd/protoc-gen-openapi@latest
github.com/mattn/goreman@latest
github.com/spf13/cobra-cli@latest
)

for pkg in ${packages[@]}; do
    # GO111MODULE=on go get -v golang.org/x/tools/gopls@latest
    # go 1.17:
    #    go get: installing executables with 'go get' in module mode is deprecated.

    # < 1.17
    if verlt $GO_VERSION 1.17; then
        GO111MODULE=on go get -u -v $pkg
    else
        # 1.17+
        GO111MODULE=on go install -v $pkg
    fi
done

# 其他
cp ~/go/bin/dlv ~/go/bin/dlv-dap
